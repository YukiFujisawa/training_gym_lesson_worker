<table>
  <tr>
    <th>shop_name</th>
    <th colspan="2"></th>
  </tr>

  <% shops.each do |shop| %>
    <% next unless shop.id %>
    <tr>
      <td><%= shop.shop_name %></td>
      <td><%= link_to 'Show', shop_path(shop) %></td>
      <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
      <td><%= link_to 'Destroy Company', [shop.operating_company, shop], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
