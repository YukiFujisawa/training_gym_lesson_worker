<h1>Listing Shop</h1>

<table>
  <tr>
    <th>operating_company_id</th>
    <th>shop_name</th>
    <th></th>
  </tr>

  <% @shops.each do |shop| %>
    <tr>
      <td><%= shop.operating_company_id %></td>
      <td><%= shop.shop_name %></td>
      <td><%= link_to 'Show', shop_path(shop) %></td>
      <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    </tr>
  <% end %>
</table>