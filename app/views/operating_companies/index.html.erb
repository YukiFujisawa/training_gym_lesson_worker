<h1>Listing OperatingCompanies</h1>

<table>
  <tr>
    <th>operating_company_name</th>
    <th>home_page_url</th>
    <th colspan="3"></th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.operating_company_name %></td>
      <td><%= company.home_page_url %></td>
      <td><%= link_to 'Show', operating_company_path(company) %></td>
      <td><%= link_to 'Edit', edit_operating_company_path(company) %></td>
      <td><%= link_to 'Destroy', operating_company_path(company), method: :delete, data: { confirm: '削除してもよろしいですか' } %></td>
    </tr>
  <% end %>
</table>